<?xml version="1.0" encoding="utf-8"?>
<!-- 
    Team Management Item Layout
    Professional list item with edit/delete actions
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="#FFFFFF">
    
    <!-- Team Info -->
    <TextView
        android:id="@+id/tvTeamInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Lakers (12 players)"
        android:textSize="14sp"
        android:textColor="#2C3E50"
        android:layout_gravity="center_vertical" />
    
    <!-- Edit Button -->
    <Button
        android:id="@+id/btnEditTeam"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="Edit"
        android:textSize="12sp"
        android:background="#3498DB"
        android:textColor="#FFFFFF"
        android:layout_marginEnd="8dp"
        android:paddingHorizontal="12dp" />
    
    <!-- Players Button -->
    <Button
        android:id="@+id/btnManagePlayers"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="Players"
        android:textSize="12sp"
        android:background="#27AE60"
        android:textColor="#FFFFFF"
        android:layout_marginEnd="8dp"
        android:paddingHorizontal="12dp" />
    
    <!-- Delete Button -->
    <Button
        android:id="@+id/btnDeleteTeam"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="Delete"
        android:textSize="12sp"
        android:background="#E74C3C"
        android:textColor="#FFFFFF"
        android:paddingHorizontal="12dp" />
    
</LinearLayout>
