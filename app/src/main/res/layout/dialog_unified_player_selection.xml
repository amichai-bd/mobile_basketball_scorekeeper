<?xml version="1.0" encoding="utf-8"?>
<!-- 
    Unified Player Selection Modal - Handles all player selection scenarios
    Three modes: Setup (0→5), Quarter Change (5→5), Substitution (flexible)
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="24dp">

    <!-- Context Header -->
    <TextView
        android:id="@+id/tvModalHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lakers - Select Starting 5"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#2C3E50"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Status Display -->
    <TextView
        android:id="@+id/tvStatusDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0/5 selected"
        android:textSize="14sp"
        android:textColor="#7F8C8D"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Player Grid (3x4 layout for 12 players) -->
    <GridLayout
        android:id="@+id/gridPlayers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="4"
        android:alignmentMode="alignBounds"
        android:useDefaultMargins="true"
        android:layout_marginBottom="24dp">
        
        <!-- Player cards will be added programmatically -->
        
    </GridLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="#7F8C8D"
            android:background="@android:color/transparent"
            android:layout_marginEnd="12dp"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp" />

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Lineup"
            android:textColor="#FFFFFF"
            android:background="@android:color/holo_blue_bright"
            android:enabled="false"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp" />

    </LinearLayout>

</LinearLayout>
