<?xml version="1.0" encoding="utf-8"?>
<!-- 
    Live Game Recording Layout (Frame 3) - NEW 4-SECTION LAYOUT
    Team panels extend full height, middle section split vertically
    Professional basketball statistics recording interface
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#F8F9FA">

    <!-- LEFT PANEL: Team A - Full Height -->
    <LinearLayout
        android:id="@+id/teamAPanel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="8dp"
        android:layout_margin="4dp"
        android:elevation="2dp">
            
            <!-- Team A Players Section -->
            
            <!-- Team A Players (5 buttons) -->
            <LinearLayout
                android:id="@+id/llTeamAPlayers"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical" />
            
            <!-- Team A Actions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                
                <Button
                    android:id="@+id/btnTeamATimeout"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:text="TimeOut"
                    android:textSize="10sp"
                    android:background="#F39C12"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="2dp" />
                
                <Button
                    android:id="@+id/btnTeamAFoul"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:text="Foul"
                    android:textSize="10sp"
                    android:background="#E74C3C"
                    android:textColor="#FFFFFF"
                    android:layout_marginHorizontal="2dp" />
                
                <Button
                    android:id="@+id/btnTeamASub"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:text="Sub"
                    android:textSize="10sp"
                    android:background="#9B59B6"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="2dp" />
            </LinearLayout>
        </LinearLayout>
        
        <!-- MIDDLE SECTION: Compact Top Controls + Maximized Event Area -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:layout_margin="4dp"
            android:elevation="2dp">
            
            <!-- MIDDLE TOP: Blue Strip with Team Names on Sides -->
            <LinearLayout
                android:id="@+id/middleTopPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:orientation="horizontal"
                android:background="#34495E"
                android:paddingHorizontal="4dp"
                android:paddingVertical="2dp">
                
                <!-- Left Side: Team A Name, Score, and Fouls -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    
                    <TextView
                        android:id="@+id/tvTeamANameStrip"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Lakers"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:gravity="center_vertical"
                        android:layout_marginEnd="8dp" />
                    
                    <TextView
                        android:id="@+id/tvTeamAScore"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="45"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:gravity="center_vertical"
                        android:layout_marginEnd="8dp" />
                    
                    <TextView
                        android:id="@+id/tvTeamAFouls"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="3F"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:gravity="center_vertical" />
                </LinearLayout>
                
                <!-- Middle-Left: Start/Pause Button (Spanning both rows) -->
                <Button
                    android:id="@+id/btnGameToggle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="START"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:background="@android:color/holo_green_light"
                    android:textColor="#FFFFFF"
                    android:layout_marginHorizontal="2dp" />
                
                <!-- Middle-Center: Timer (Spanning both rows) -->
                <TextView
                    android:id="@+id/tvGameClock"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="10:00"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@android:color/holo_orange_light"
                    android:gravity="center"
                    android:layout_marginHorizontal="2dp" />
                
                <!-- Middle-Right: Quarter Dropdown (Spanning both rows) -->
                <Spinner
                    android:id="@+id/spinnerQuarter"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:background="@android:color/white"
                    android:layout_marginHorizontal="2dp" />
                
                <!-- Right Side: Team B Fouls, Score, and Name -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:gravity="center_vertical|end">
                    
                    <TextView
                        android:id="@+id/tvTeamBFouls"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="5F"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:gravity="center_vertical"
                        android:layout_marginEnd="8dp" />
                    
                    <TextView
                        android:id="@+id/tvTeamBScore"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="38"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:gravity="center_vertical"
                        android:layout_marginEnd="8dp" />
                    
                    <TextView
                        android:id="@+id/tvTeamBNameStrip"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Warriors"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:gravity="center_vertical" />
                </LinearLayout>
            </LinearLayout>
            
            <!-- MIDDLE BOTTOM: Maximized Event Buttons and Live Feed -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="6dp">
                
                <!-- Event Grid - Complete 13+ Basketball Events (4-Column Layout) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:gravity="center">
                    
                    <!-- Row 1: SCORING & ASSISTS (Natural flow: score → assist) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <Button android:id="@+id/btn1P" android:text="1P" android:layout_margin="2dp" android:background="#2ECC71" android:textColor="#FFFFFF" android:textSize="11sp" android:textStyle="bold" 
                            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" />
                        <Button android:id="@+id/btn2P" android:text="2P" android:layout_margin="2dp" android:background="#2ECC71" android:textColor="#FFFFFF" android:textSize="11sp" android:textStyle="bold"
                            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" />
                        <Button android:id="@+id/btn3P" android:text="3P" android:layout_margin="2dp" android:background="#2ECC71" android:textColor="#FFFFFF" android:textSize="11sp" android:textStyle="bold"
                            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" />
                        <Button android:id="@+id/btnAST" android:text="AST" android:layout_margin="2dp" android:background="#2ECC71" android:textColor="#FFFFFF" android:textSize="10sp" android:textStyle="bold"
                            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" />
                    </LinearLayout>
                    
                    <!-- Row 2: MISSES & OFFENSIVE REBOUND (Natural flow: miss → offensive rebound) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <Button android:id="@+id/btn1M" android:text="1M" android:layout_margin="2dp" android:background="#E74C3C" android:textColor="#FFFFFF" android:textSize="11sp" android:textStyle="bold"
                            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" />
                        <Button android:id="@+id/btn2M" android:text="2M" android:layout_margin="2dp" android:background="#E74C3C" android:textColor="#FFFFFF" android:textSize="11sp" android:textStyle="bold"
                            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" />
                        <Button android:id="@+id/btn3M" android:text="3M" android:layout_margin="2dp" android:background="#E74C3C" android:textColor="#FFFFFF" android:textSize="11sp" android:textStyle="bold"
                            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" />
                        <Button android:id="@+id/btnOR" android:text="OR" android:layout_margin="2dp" android:background="#E74C3C" android:textColor="#FFFFFF" android:textSize="11sp" android:textStyle="bold"
                            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" />
                    </LinearLayout>
                    
                    <!-- Row 3: DEFENSIVE PLAYS (All defensive actions) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <Button android:id="@+id/btnDR" android:text="DR" android:layout_margin="2dp" android:background="#16A085" android:textColor="#FFFFFF" android:textSize="11sp" android:textStyle="bold"
                            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" />
                        <Button android:id="@+id/btnSTL" android:text="STL" android:layout_margin="2dp" android:background="#16A085" android:textColor="#FFFFFF" android:textSize="11sp" android:textStyle="bold"
                            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" />
                        <Button android:id="@+id/btnBLK" android:text="BLK" android:layout_margin="2dp" android:background="#16A085" android:textColor="#FFFFFF" android:textSize="11sp" android:textStyle="bold"
                            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" />
                        <Button android:id="@+id/btnTO" android:text="TO" android:layout_margin="2dp" android:background="#16A085" android:textColor="#FFFFFF" android:textSize="11sp" android:textStyle="bold"
                            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" />
                    </LinearLayout>
                    

                    
                </LinearLayout>
                
                <!-- Live Event Feed Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#F8F9FA"
                    android:padding="8dp"
                    android:layout_marginTop="8dp">
                    
                    <!-- Live Feed Header: [Allow Events] ... [Last 2 Events - Centered] ... [Undo] [View Log] -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical">
                        
                        <!-- Allow Events Override Button -->
                        <Button
                            android:id="@+id/btnAllowEvents"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:text="Events: OFF"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:background="#E74C3C"
                            android:textColor="#FFFFFF"
                            android:paddingHorizontal="10dp"
                            android:layout_marginEnd="8dp" />
                        
                        <!-- Spacer for centering Recent Events -->
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />
                        
                        <!-- Last 2 Events Title (Centered) -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Last 2 Events"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#7F8C8D"
                            android:gravity="center" />
                        
                        <!-- Spacer for centering Recent Events -->
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />
                        
                        <!-- Undo Button -->
                        <Button
                            android:id="@+id/btnUndo"
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:text="⟲"
                            android:textSize="14sp"
                            android:background="#FF9800"
                            android:textColor="#FFFFFF"
                            android:paddingHorizontal="8dp"
                            android:layout_marginEnd="4dp" />
                        
                        <!-- View Log Button -->
                        <Button
                            android:id="@+id/btnViewLog"
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:text="View Log"
                            android:textSize="10sp"
                            android:background="#34495E"
                            android:textColor="#FFFFFF"
                            android:paddingHorizontal="12dp"
                            android:layout_marginStart="4dp" />
                    </LinearLayout>
                    
                    <!-- Live Event Feed (Last 2 Events) -->
                    <LinearLayout
                        android:id="@+id/llLiveEventFeed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />
                        
                </LinearLayout>
                
            </LinearLayout>
        </LinearLayout>
        
        <!-- RIGHT PANEL: Team B - Full Height -->
        <LinearLayout
            android:id="@+id/teamBPanel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:layout_margin="4dp"
            android:elevation="2dp">
            
            <!-- Team B Players Section -->
            
            <!-- Team B Players (5 buttons) -->
            <LinearLayout
                android:id="@+id/llTeamBPlayers"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical" />
            
            <!-- Team B Actions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                
                <Button
                    android:id="@+id/btnTeamBTimeout"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:text="TimeOut"
                    android:textSize="10sp"
                    android:background="#F39C12"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="2dp" />
                
                <Button
                    android:id="@+id/btnTeamBFoul"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:text="Foul"
                    android:textSize="10sp"
                    android:background="#E74C3C"
                    android:textColor="#FFFFFF"
                    android:layout_marginHorizontal="2dp" />
                
                <Button
                    android:id="@+id/btnTeamBSub"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:text="Sub"
                    android:textSize="10sp"
                    android:background="#9B59B6"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="2dp" />
            </LinearLayout>
        </LinearLayout>
    
</LinearLayout>
