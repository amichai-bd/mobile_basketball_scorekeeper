<?xml version="1.0" encoding="utf-8"?>
<!-- 
    Live Game Recording Layout (Frame 3) - THE CORE FUNCTIONALITY
    Professional basketball statistics recording interface
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FA">

    <!-- Top Panel - Game Management -->
    <LinearLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#2C3E50"
        android:padding="16dp"
        android:elevation="4dp">
        
        <!-- Score and Clock Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">
            
            <!-- Game Score -->
            <TextView
                android:id="@+id/tvScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Lakers 45 - Warriors 38"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center" />
            
            <!-- Game Clock -->
            <TextView
                android:id="@+id/tvGameClock"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="8:45"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center" />
            
            <!-- Current Quarter -->
            <TextView
                android:id="@+id/tvCurrentQuarter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Q2"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center" />
        </LinearLayout>
        
        <!-- Control Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">
            
            <!-- Game Toggle Button (Single Button) -->
            <Button
                android:id="@+id/btnGameToggle"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="START GAME"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@android:color/holo_green_light"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="16dp"
                android:paddingHorizontal="16dp" />
            
            <!-- Team Fouls Display -->
            <TextView
                android:id="@+id/tvTeamFouls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team Fouls: A-3  B-5"
                android:textSize="14sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>
        
        <!-- Quarter Selection Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            
            <Button
                android:id="@+id/btnQ1"
                android:layout_width="60dp"
                android:layout_height="36dp"
                android:text="Q1"
                android:textSize="12sp"
                android:background="#34495E"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="4dp" />
            
            <Button
                android:id="@+id/btnQ2"
                android:layout_width="60dp"
                android:layout_height="36dp"
                android:text="Q2"
                android:textSize="12sp"
                android:background="#BDC3C7"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="4dp" />
                
            <Button
                android:id="@+id/btnQ3"
                android:layout_width="60dp"
                android:layout_height="36dp"
                android:text="Q3"
                android:textSize="12sp"
                android:background="#BDC3C7"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="4dp" />
                
            <Button
                android:id="@+id/btnQ4"
                android:layout_width="60dp"
                android:layout_height="36dp"
                android:text="Q4"
                android:textSize="12sp"
                android:background="#BDC3C7"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>

    <!-- Main Game Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        
        <!-- Team A Panel (Left) -->
        <LinearLayout
            android:id="@+id/teamAPanel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:layout_margin="8dp"
            android:elevation="2dp">
            
            <!-- Team A Title -->
            <TextView
                android:id="@+id/tvTeamAName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lakers"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:gravity="center"
                android:layout_marginBottom="12dp" />
            
            <!-- Team A Players (5 buttons) -->
            <LinearLayout
                android:id="@+id/llTeamAPlayers"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical" />
            
            <!-- Team A Actions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                
                <Button
                    android:id="@+id/btnTeamATimeout"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="TimeOut"
                    android:textSize="12sp"
                    android:background="#F39C12"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="4dp" />
                
                <Button
                    android:id="@+id/btnTeamASub"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="Sub"
                    android:textSize="12sp"
                    android:background="#9B59B6"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="4dp" />
            </LinearLayout>
        </LinearLayout>
        
        <!-- Event Panel (Center) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:elevation="2dp">
            
            <!-- Event Buttons and Live Feed Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                
                <!-- Event Grid - Complete 13+ Basketball Events -->
                <GridLayout
                    android:id="@+id/gridEventButtons"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:columnCount="3"
                    android:rowCount="5"
                    android:layout_gravity="center">
                    
                    <!-- Row 1: Scoring Makes -->
                    <Button android:id="@+id/btn1P" android:text="1P" android:layout_margin="3dp" android:background="#2ECC71" android:textColor="#FFFFFF" android:textSize="13sp" android:textStyle="bold" />
                    <Button android:id="@+id/btn2P" android:text="2P" android:layout_margin="3dp" android:background="#2ECC71" android:textColor="#FFFFFF" android:textSize="13sp" android:textStyle="bold" />
                    <Button android:id="@+id/btn3P" android:text="3P" android:layout_margin="3dp" android:background="#2ECC71" android:textColor="#FFFFFF" android:textSize="13sp" android:textStyle="bold" />
                    
                    <!-- Row 2: Scoring Misses -->
                    <Button android:id="@+id/btn1M" android:text="1M" android:layout_margin="3dp" android:background="#E74C3C" android:textColor="#FFFFFF" android:textSize="13sp" android:textStyle="bold" />
                    <Button android:id="@+id/btn2M" android:text="2M" android:layout_margin="3dp" android:background="#E74C3C" android:textColor="#FFFFFF" android:textSize="13sp" android:textStyle="bold" />
                    <Button android:id="@+id/btn3M" android:text="3M" android:layout_margin="3dp" android:background="#E74C3C" android:textColor="#FFFFFF" android:textSize="13sp" android:textStyle="bold" />
                    
                    <!-- Row 3: Rebounds & Assists -->
                    <Button android:id="@+id/btnOR" android:text="OR" android:layout_margin="3dp" android:background="#16A085" android:textColor="#FFFFFF" android:textSize="13sp" android:textStyle="bold" />
                    <Button android:id="@+id/btnDR" android:text="DR" android:layout_margin="3dp" android:background="#16A085" android:textColor="#FFFFFF" android:textSize="13sp" android:textStyle="bold" />
                    <Button android:id="@+id/btnAST" android:text="AST" android:layout_margin="3dp" android:background="#16A085" android:textColor="#FFFFFF" android:textSize="13sp" android:textStyle="bold" />
                    
                    <!-- Row 4: Defense & Violations -->
                    <Button android:id="@+id/btnSTL" android:text="STL" android:layout_margin="3dp" android:background="#9B59B6" android:textColor="#FFFFFF" android:textSize="13sp" android:textStyle="bold" />
                    <Button android:id="@+id/btnBLK" android:text="BLK" android:layout_margin="3dp" android:background="#9B59B6" android:textColor="#FFFFFF" android:textSize="13sp" android:textStyle="bold" />
                    <Button android:id="@+id/btnTO" android:text="TO" android:layout_margin="3dp" android:background="#E67E22" android:textColor="#FFFFFF" android:textSize="13sp" android:textStyle="bold" />
                    
                    <!-- Row 5: Fouls & Team Events -->
                    <Button android:id="@+id/btnFOUL" android:text="FOUL" android:layout_margin="3dp" android:background="#8E44AD" android:textColor="#FFFFFF" android:textSize="13sp" android:textStyle="bold" />
                    <Button android:id="@+id/btnTIMEOUT" android:text="TIMEOUT" android:layout_margin="3dp" android:background="#F39C12" android:textColor="#FFFFFF" android:textSize="11sp" android:textStyle="bold" />
                    <View android:layout_margin="3dp" />
                    
                </GridLayout>
                
                <!-- Live Event Feed Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#F8F9FA"
                    android:padding="8dp"
                    android:layout_marginTop="8dp">
                    
                    <!-- Live Feed Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">
                        
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Recent Events"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#7F8C8D" />
                        
                        <Button
                            android:id="@+id/btnViewLog"
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:text="View Log"
                            android:textSize="10sp"
                            android:background="#34495E"
                            android:textColor="#FFFFFF"
                            android:paddingHorizontal="12dp" />
                    </LinearLayout>
                    
                    <!-- Live Event Feed (Last 3 Events) -->
                    <LinearLayout
                        android:id="@+id/llLiveEventFeed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />
                        
                </LinearLayout>
                
            </LinearLayout>
        </LinearLayout>
        
        <!-- Team B Panel (Right) -->
        <LinearLayout
            android:id="@+id/teamBPanel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:layout_margin="8dp"
            android:elevation="2dp">
            
            <!-- Team B Title -->
            <TextView
                android:id="@+id/tvTeamBName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Warriors"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:gravity="center"
                android:layout_marginBottom="12dp" />
            
            <!-- Team B Players (5 buttons) -->
            <LinearLayout
                android:id="@+id/llTeamBPlayers"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical" />
            
            <!-- Team B Actions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                
                <Button
                    android:id="@+id/btnTeamBTimeout"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="TimeOut"
                    android:textSize="12sp"
                    android:background="#F39C12"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="4dp" />
                
                <Button
                    android:id="@+id/btnTeamBSub"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="Sub"
                    android:textSize="12sp"
                    android:background="#9B59B6"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="4dp" />
            </LinearLayout>
        </LinearLayout>
        
    </LinearLayout>
    
</LinearLayout>
