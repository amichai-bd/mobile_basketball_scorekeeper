<?xml version="1.0" encoding="utf-8"?>
<!-- 
    Game Roster Layout (Frame 2) - MODERN & SLEEK
    Instant player selection with beautiful visual feedback
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:padding="20dp">

    <!-- Main Title -->
    <TextView
        android:id="@+id/tvMainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:text="Select Players"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#2C3E50"
        android:layout_marginBottom="32dp" />
    
    <!-- Teams Container -->
    <LinearLayout
        android:id="@+id/teamsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvMainTitle"
        android:layout_above="@id/btnStartGame"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="24dp">
        
        <!-- Team A Section -->
        <LinearLayout
            android:id="@+id/teamASection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginEnd="8dp"
            android:elevation="2dp">
            
            <!-- Team A Header -->
            <TextView
                android:id="@+id/tvTeamATitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Lakers (Home)"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:layout_marginBottom="8dp" />
            
            <!-- Team A Selection Counter -->
            <TextView
                android:id="@+id/tvTeamACounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0/5 selected"
                android:textSize="14sp"
                android:textColor="#7F8C8D"
                android:layout_marginBottom="16dp" />
            
            <!-- Team A Player Grid -->
            <GridLayout
                android:id="@+id/gridTeamAPlayers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_gravity="center" />
                
        </LinearLayout>
        
        <!-- Team B Section -->
        <LinearLayout
            android:id="@+id/teamBSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginStart="8dp"
            android:elevation="2dp">
            
            <!-- Team B Header -->
            <TextView
                android:id="@+id/tvTeamBTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Warriors (Away)"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:layout_marginBottom="8dp" />
            
            <!-- Team B Selection Counter -->
            <TextView
                android:id="@+id/tvTeamBCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0/5 selected"
                android:textSize="14sp"
                android:textColor="#7F8C8D"
                android:layout_marginBottom="16dp" />
            
            <!-- Team B Player Grid -->
            <GridLayout
                android:id="@+id/gridTeamBPlayers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_gravity="center" />
                
        </LinearLayout>
        
    </LinearLayout>
    
    <!-- Start Game Button -->
    <Button
        android:id="@+id/btnStartGame"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:text="Start Game"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="#BDC3C7"
        android:enabled="false"
        android:elevation="4dp" />
        
</RelativeLayout>
