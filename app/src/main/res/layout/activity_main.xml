<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#1a1a1a"
    android:padding="16dp">

    <!-- Home Team Section (Left) -->
    <LinearLayout
        android:id="@+id/homeTeamSection"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="#2c2c2c"
        android:layout_marginEnd="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HOME TEAM"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp"
            android:background="#ff6b6b"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/homePlayer1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="#23 J. Smith"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:backgroundTint="#4a90e2"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/homePlayer2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="#11 M. Johnson"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:backgroundTint="#4a90e2"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/homePlayer3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="#5 K. Williams"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:backgroundTint="#4a90e2"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/homePlayer4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="#32 D. Brown"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:backgroundTint="#4a90e2"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/homePlayer5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="#7 R. Davis"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:backgroundTint="#4a90e2"/>
    </LinearLayout>

    <!-- Game Control Section (Middle) -->
    <LinearLayout
        android:id="@+id/gameControlSection"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="#2c2c2c">

        <!-- Game Status - Compact Version -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#3d3d3d"
            android:padding="6dp"
            android:layout_marginBottom="8dp">

            <!-- Top Row: Quarter, Time, Scores -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/quarterDisplay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Q1"
                    android:textColor="#ffd700"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/timeDisplay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="12:00"
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/homeScore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="HOME: 0"
                        android:textColor="#ff6b6b"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/guestScore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GUEST: 0"
                        android:textColor="#50c878"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Control Buttons Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <Button
                    android:id="@+id/btnStartStop"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="START"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:backgroundTint="#27ae60"
                    android:layout_marginEnd="2dp"
                    android:padding="0dp"/>

                <Button
                    android:id="@+id/btnNextQuarter"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="NEXT QTR"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:backgroundTint="#e67e22"
                    android:layout_marginHorizontal="2dp"
                    android:padding="0dp"/>

                <Button
                    android:id="@+id/btnViewLog"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="GAME LOG"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:backgroundTint="#8e44ad"
                    android:layout_marginStart="2dp"
                    android:padding="0dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Action Buttons -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Scoring Buttons -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SCORING"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="4dp"
                    android:background="#4a4a4a"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:id="@+id/btn1Point"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="1 PT"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:backgroundTint="#f39c12"
                        android:layout_marginEnd="4dp"/>

                    <Button
                        android:id="@+id/btn2Point"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="2 PT"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:backgroundTint="#e74c3c"
                        android:layout_marginHorizontal="4dp"/>

                    <Button
                        android:id="@+id/btn3Point"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="3 PT"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:backgroundTint="#9b59b6"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>

                <!-- Stats Buttons -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="STATISTICS"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="4dp"
                    android:background="#4a4a4a"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:id="@+id/btnRebound"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="REBOUND"
                        android:textColor="#ffffff"
                        android:textSize="14sp"
                        android:backgroundTint="#27ae60"
                        android:layout_marginEnd="4dp"/>

                    <Button
                        android:id="@+id/btnAssist"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="ASSIST"
                        android:textColor="#ffffff"
                        android:textSize="14sp"
                        android:backgroundTint="#2980b9"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:id="@+id/btnSteal"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="STEAL"
                        android:textColor="#ffffff"
                        android:textSize="14sp"
                        android:backgroundTint="#16a085"
                        android:layout_marginEnd="4dp"/>

                    <Button
                        android:id="@+id/btnBlock"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="BLOCK"
                        android:textColor="#ffffff"
                        android:textSize="14sp"
                        android:backgroundTint="#34495e"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>

                <!-- Violations -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="VIOLATIONS"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="4dp"
                    android:background="#4a4a4a"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:id="@+id/btnFoul"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="FOUL"
                        android:textColor="#ffffff"
                        android:textSize="14sp"
                        android:backgroundTint="#c0392b"
                        android:layout_marginEnd="4dp"/>

                    <Button
                        android:id="@+id/btnTurnover"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="TURNOVER"
                        android:textColor="#ffffff"
                        android:textSize="14sp"
                        android:backgroundTint="#d35400"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>

                <!-- Game Control -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GAME CONTROL"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="4dp"
                    android:background="#4a4a4a"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/btnTimeout"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="TIMEOUT"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:backgroundTint="#7f8c8d"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Guest Team Section (Right) -->
    <LinearLayout
        android:id="@+id/guestTeamSection"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="#2c2c2c"
        android:layout_marginStart="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GUEST TEAM"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp"
            android:background="#50c878"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/guestPlayer1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="#15 A. Wilson"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:backgroundTint="#2ecc71"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/guestPlayer2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="#24 B. Martinez"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:backgroundTint="#2ecc71"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/guestPlayer3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="#9 C. Anderson"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:backgroundTint="#2ecc71"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/guestPlayer4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="#17 D. Thomas"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:backgroundTint="#2ecc71"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/guestPlayer5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="#3 E. Garcia"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:backgroundTint="#2ecc71"/>
    </LinearLayout>

</LinearLayout>
