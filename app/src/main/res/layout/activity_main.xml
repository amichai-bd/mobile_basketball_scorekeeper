<?xml version="1.0" encoding="utf-8"?>
<!-- 
    Game Selection Layout (Frame 1) - CLEAN & SIMPLE
    Sleek game selection interface with card-based design
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:padding="20dp">
    
    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/headerSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="40dp">
        
        <!-- Main Title -->
        <TextView
            android:id="@+id/tvMainTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basketball Stats"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:layout_marginBottom="8dp" />
        
        <!-- Section Title -->
        <TextView
            android:id="@+id/tvSectionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Game"
            android:textSize="18sp"
            android:textColor="#7F8C8D" />
    </LinearLayout>
    
    <!-- Edit League Button (Small, top-right) -->
    <Button
        android:id="@+id/btnEditLeague"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:text="âš™"
        android:textSize="16sp"
        android:background="@android:color/transparent"
        android:textColor="#7F8C8D" />
    
    <!-- Games List (Card-based) -->
    <ListView
        android:id="@+id/lvGames"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerSection"
        android:layout_above="@id/footerText"
        android:divider="@android:color/transparent"
        android:dividerHeight="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp" />
    
    <!-- Footer Instructions -->
    <TextView
        android:id="@+id/footerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Tap a game to select players and start recording"
        android:textSize="14sp"
        android:textColor="#95A5A6"
        android:textStyle="italic"
        android:layout_marginBottom="16dp" />
    
</RelativeLayout>