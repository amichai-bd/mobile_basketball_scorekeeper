<?xml version="1.0" encoding="utf-8"?>
<!-- 
    Game Schedule Layout (Frame 1) - SPECIFICATION ALIGNED
    Game selection from league database with Edit League management
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    
    <!-- Header Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">
        
        <!-- Main Title -->
        <TextView
            android:id="@+id/tvMainTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Summer League"
            android:textSize="24sp"
            android:textStyle="bold" />
        
        <!-- Edit League Button -->
        <Button
            android:id="@+id/btnEditLeague"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Edit League"
            android:textSize="14sp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/holo_blue_dark"
            android:padding="8dp" />
    </RelativeLayout>
    
    <!-- Table Title -->
    <TextView
        android:id="@+id/tvTableTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game schedule"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />
    
    <!-- Game Selection Instructions -->
    <TextView
        android:id="@+id/tvInstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a scheduled game to start recording statistics:"
        android:textSize="14sp"
        android:textStyle="italic"
        android:layout_marginBottom="12dp" />
    
    <!-- Scheduled Games List -->
    <ListView
        android:id="@+id/lvScheduledGames"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp"
        android:choiceMode="singleChoice"
        android:listSelector="@android:color/holo_blue_light" />
    
    <!-- Start Game Button -->
    <Button
        android:id="@+id/btnStartGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Game"
        android:textSize="18sp"
        android:padding="12dp"
        android:enabled="false" />
    
</LinearLayout>